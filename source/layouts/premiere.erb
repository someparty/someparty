<% wrap_layout :layout do %>
  <article class="pa3 pa4-ns lh-copy f5 f4-ns">
    <img src="<%= current_page.data.header_image_uri %>" alt="<%= current_page.data.header_image_alt %>"/>
    <h1 class="f2 mt1 mb0 maxread center"><%= current_page.data.title unless current_page.data.title.nil? %></h1>
    <%= yield %>
  </article>

  <div class="pa3-l measure-wide center">
    <%= partial '/_partials/cta' %>
  </div>

<% end %>
