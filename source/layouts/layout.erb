<!doctype html>
<html>
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-KW3JSMV');</script>
    <!-- End Google Tag Manager -->

    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= favicon_tag 'images/icons/favicon.ico' %>

    <% %w(57 60 72 76 114 120 144 152 180).each do |s| %>
    <%= favicon_tag "images/icons/apple-touch-icon-#{s}x#{s}.png", rel: 'apple-touch-icon', type: 'image/png', sizes: "#{s}x#{s}" %>
    <% end %>

    <% %w(16 32 96).each do |s| %>
    <%= favicon_tag "images/icons/favicon-#{s}x#{s}.png", rel: 'icon', type: 'image/png', sizes: "#{s}x#{s}" %>
    <% end %>

    <%= favicon_tag "images/icons/android-chrome-192x192.png", rel: 'icon', type: 'image/png', sizes: "192x192" %>

    <link rel="stylesheet" href="https://unpkg.com/tachyons/css/tachyons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans:100,300" rel="stylesheet">

    <title>Some Party<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <style>
      body {
        font-family: 'Alegreya Sans', sans-serif;
        font-weight: 100;
      }
    </style>
  </head>
  <body class="bg-black white">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KW3JSMV"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <header class="tc pa4">
      <h1 class="dn">Some Party</h1>
      <%= image_tag 'logo.svg', alt: "Some Party", class: "measure" %>
      <p>A Canadian music thing by <a href="https://twitter.com/adamwhite" class="white b no-underline">Adam White</a><br/>Coming soon enough</p>
    </header>

    <div id="main" role="main">
      <%= yield %>
    </div>

    <%= partial '/_partials/footer' %>

  </body>
</html>
